var
  R : Integer;
begin

end;

procedure TestTEdge.TestSetDecisionVal(newDecisionVal: TDecisionValue);
var
  R : Integer;
begin

end;

procedure TestTEdge.TestGetDecisionVal(_Result: TDecisionValue);
var
  R : Integer;
