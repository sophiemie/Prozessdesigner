unit UDesignerToolbar;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, Vcl.Menus,
  Vcl.Graphics, Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.FMTBcd, Data.SqlExpr,
  Vcl.StdCtrls, VCL.TMSFNCUtils, Data.DB, Vcl.Buttons, Vcl.ExtCtrls, Vcl.ToolWin,
  Vcl.ComCtrls, System.Classes, UZMTStandard;

  type
  TToolBar = class
  public
    constructor Create;
    var
      BtnStart : TBitBtn; { Button fuer den Startknoten }
      BtnEnd : TBitBtn; { Button fuer den Endknoten }
      BtnHD : TBitBtn; { Button fuer die menschliche Entscheidung }
      BtnMD : TBitBtn; { Button fuer die maschinelle Entscheidung }
      BtnHT : TBitBtn; { Button fuer die menschliche Aufgabe }
      BtnMT : TBitBtn; { Button fuer die maschinelle Aufgabe }
      BtnEdge : TBitBtn;  { Button fuer die Kanten }
      PanelMain : TPanel; { Panel von allen Buttons, Labels und Ueberschriften }
      PanelStartEnd : TPanel; { Ueberschrift der Start- und Endknoten }
      PanelDecision : TPanel; { Ueberschrift der Entscheidungsknoten }
      PanelTask : TPanel; { Ueberschrift der Aufgabenknoten }
      PanelEdge : TPanel; { Uberschrift der Kanten }
      LabelStart : TLabel; { Beschreibung des Startknotens }
      LabelEnd : TLabel; { Beschreibung des Endknotens }
      LabelHD : TLabel; { Beschreibung der menschlichen Entscheidung }
      LabelMD : TLabel; { Beschreibung der maschinellen Entscheidung }
      LabelMT : TLabel; { Beschreibung der maschinellen Aufgabe }
      LabelHT : TLabel; { Beschreibung der menschlichen Aufgabe }
  private
    var
      MainPanelHeight : Integer;
    const
      MAIN_PANEL_WIDTH = 260;
      PANEL_HEIGHT = 25;
      PANEL_WIDTH = 274;
      MAIN_PANEL_COLOR = clBtnHighlight;
      PANEL_COLOR = lightBlue;
      PANEL_FONT_COLOR = clBtnHighlight;
      BTN_HEIGHT = 65;
      BTN_TASK_WIDTH = 98;
      BTN_DECISION_WIDTH = 81;
      BTN_DECISION_HEIGHT = 76;
      PANEL_FONTSIZE = 16;
      LABEL_FONTSIZE = 11;
  end;

implementation

constructor TToolbar.Create;
begin
  inherited Create;
  {Initialisierung der Buttons}
  BtnStart.Height := BTN_HEIGHT;
  BtnStart.Width := BTN_HEIGHT;
  BtnEnd.Height := BTN_HEIGHT;
  BtnEnd.Width := BTN_HEIGHT;
  BtnHT.Height := BTN_HEIGHT;
  BtnMT.Height := BTN_HEIGHT;
  BtnHT.Width := BTN_TASK_WIDTH;
  BtnMT.Width := BTN_TASK_WIDTH;
  BtnHD.Height := BTN_DECISION_HEIGHT;
  BtnHD.Width := BTN_DECISION_WIDTH;
  BtnMD.Height := BTN_DECISION_HEIGHT;
  BtnMD.Width := BTN_DECISION_WIDTH;

end;

end.
