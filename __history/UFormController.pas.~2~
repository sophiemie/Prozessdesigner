unit UFormController;

interface

uses Vcl.Forms;

type

TFormController = class abstract
public
  procedure changeWindowSize(form: TForm); virtual; abstract;
end;

TStartPageFormController = class(TFormController)
public
  procedure changeWindowSize(form: TForm); override;
end;

TDesignerFormController = class(TFormController)
public
  procedure changeWindowSize(form: TForm); override;
end;


implementation

  procedure TStartPageFormController.changeWindowSize(form: TForm);
  begin

  end;

  procedure TDesignerFormController.changeWindowSize(form: TForm);
  begin

  end;


end.
